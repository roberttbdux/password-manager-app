<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Password Manager - Watch Tower</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      background-color: #f8f9fa;
    }
    .sidebar {
      height: 100vh;
      background: #343a40;
      padding: 20px;
    }
    .sidebar .nav-link {
      color: #fff;
    }
    .sidebar .nav-link.active,
    .sidebar .nav-link:hover {
      background-color: #495057;
      border-radius: 5px;
    }
    .content-section {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
    .chart-container {
      position: relative;
      width: 180px;
      height: 180px;
    }
    .chart-container canvas {
      position: absolute;
      left: 0;
      top: 0;
    }
    .chart-center-label {
      position: absolute;
      width: 100%;
      text-align: center;
      top: 50%;
      transform: translateY(-50%);
    }
    .chart-center-label h4 {
      font-size: 2rem;
    }
    .chart-center-label small {
      font-size: 0.9rem;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-2 sidebar d-flex flex-column">
        <h4 class="text-white mb-4">Password Manager</h4>
        <ul class="nav flex-column mb-auto">
          <li class="nav-item">
            <!-- Create Button -->
            <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#createPasswordModal">
              Create +
            </button>
          </li>
          <li class="nav-item"><%= link_to "Passwords", dashboard_passwords_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Watch Tower", dashboard_watchtower_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Profile Settings", dashboard_profile_path, class: "nav-link" %></li>
        </ul>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-primary mt-auto" %>
      </div>

      <!-- Main Content -->
      <div class="col-md-10 p-4">
      <h4 class="mb-4">Watch Tower</h4> <!-- Renamed header -->
        <!-- Watchtower Score Overview -->
        <div class="content-section mb-4 d-flex align-items-center">
          <!-- Chart on Left -->
          <div class="chart-container me-4">
            <canvas id="scoreChart" width="180" height="180"></canvas>
            <div class="chart-center-label">
              <h4 class="text-success fw-bold">734</h4>
              <small class="text-muted">Very Good</small>
            </div>
          </div>

          <!-- Description -->
          <div style="flex: 1;">
            <h5>Overall Security Score</h5>
            <p class="text-muted">
              This score gives an overall idea of how safe your stored credentials are. It's calculated based on the number of strong passwords, reused or weak passwords.
            </p>
            
          </div>
        </div>

        <!-- Overall Password Strength -->
        <div class="content-section mb-4">
          <h6>Overall Password Strength</h6>
          <div class="progress" style="height: 20px;">
            <div class="progress-bar bg-success" style="width: 70%"></div>
            <div class="progress-bar bg-warning" style="width: 20%"></div>
            <div class="progress-bar bg-danger" style="width: 10%"></div>
          </div>
        </div>

        <!-- Feature Cards -->
        <div class="row">
          <!-- Reused Passwords -->
          <div class="col-md-3 mb-4">
            <div class="content-section text-center h-100">
              <h2 class="text-danger">26</h2>
              <p class="fw-bold">Reused Passwords</p>
              <p class="text-muted small">Donâ€™t use the same password on multiple websites. Generate unique passwords to improve your security.</p>
              <button class="btn btn-outline-primary btn-sm">Show Items</button>
            </div>
          </div>

          <!-- Weak Passwords -->
          <div class="col-md-3 mb-4">
            <div class="content-section text-center h-100">
              <h2 class="text-warning">22</h2>
              <p class="fw-bold">Weak Passwords</p>
              <p class="text-muted small">Weak passwords are easier to guess. Generate strong passwords to keep your accounts safe.</p>
              <button class="btn btn-outline-primary btn-sm">Show Items</button>
            </div>
          </div>

          

          
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Chart Script -->
  <script>
    const ctx = document.getElementById('scoreChart').getContext('2d');
    const scoreChart = new Chart(ctx, {
      type: 'doughnut',
      data: {
        datasets: [{
          data: [734, 266], // score vs remainder to 1000
          backgroundColor: ['#28a745', '#e9ecef'],
          borderWidth: 0
        }]
      },
      options: {
        cutout: '70%',
        plugins: {
          tooltip: { enabled: false },
          legend: { display: false }
        }
      }
    });
  </script>
</body>
</html>